# Test default value syntax
# ${VAR:-default} - use default if VAR is unset OR empty
# ${VAR-default} - use default only if VAR is unset

# Basic default value
DB_HOST=${UNDEFINED_HOST:-localhost}
DB_PORT=${UNDEFINED_PORT:-5432}

# Default with existing variable (should use env value)
EXISTING_VAR=${DEFINED_VAR:-fallback}

# Default with empty variable (:-  should use default)
EMPTY_CHECK=${EMPTY_VAR:-default_for_empty}

# Default only if unset (- without colon)
UNSET_ONLY=${UNSET_VAR-default_unset}
EMPTY_UNSET_ONLY=${EMPTY_VAR-should_not_use}

# Nested defaults
NESTED=${LEVEL1:-${LEVEL2:-final_default}}

# Default with special characters
SPECIAL_DEFAULT=${UNDEFINED:-hello world}
URL_DEFAULT=${UNDEFINED_URL:-https://example.com/path?q=1}

# Empty default
EMPTY_DEFAULT=${UNDEFINED_EMPTY:-}

# Default in quoted value
QUOTED_DEFAULT="${UNDEFINED_QUOTED:-quoted default}"
